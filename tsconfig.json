{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "allowJs": true,
    "rootDir": "./src",
  },
  "include": [
    "src/**/*.ts"
  ]
}
